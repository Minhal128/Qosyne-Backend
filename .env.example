# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/qosyne_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_BASE_URL=https://api-m.sandbox.paypal.com

# Google Pay Configuration
GOOGLEPAY_API_KEY=your_googlepay_api_key

# Wise Configuration (Sandbox)
WISE_API_TOKEN=your_wise_api_token
WISE_PROFILE_ID=your_wise_profile_id
WISE_WALLET_ACCOUNT_ID=your_wise_wallet_account_id
WISE_ENVIRONMENT=sandbox

# Square Configuration
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_APPLICATION_ID=your_square_application_id
SQUARE_CLIENT_SECRET=your_square_client_secret
SQUARE_BASE_URL=https://connect.squareupsandbox.com

# Braintree/Venmo Configuration (Sandbox)
# Used by VenmoGateway.js via Braintree
BT_MERCHANT_ID=your_braintree_merchant_id
BT_PUBLIC_KEY=your_braintree_public_key
BT_PRIVATE_KEY=your_braintree_private_key
# Optional merchant account for specific settlement routing
BT_MERCHANT_ACCOUNT_ID=your_braintree_merchant_account_id
# Optional business account for Qosyne balance flows
BRAINTREE_BUSINESS_CUSTOMER_ID=your_business_customer_id
BRAINTREE_BUSINESS_PAYMENT_METHOD_ID=your_business_payment_method_token

# PayPal/Venmo OAuth (used by walletService Venmo connection flow)
VENMO_CLIENT_ID=your_paypal_venmo_client_id
VENMO_CLIENT_SECRET=your_paypal_venmo_client_secret
VENMO_BASE_URL=https://api-m.sandbox.paypal.com/v1

# Rapyd Configuration
RAPYD_ACCESS_KEY=your_rapyd_access_key
RAPYD_SECRET_KEY=your_rapyd_secret_key
RAPYD_BASE_URL=https://sandboxapi.rapyd.net

# Webhook Secrets
PAYPAL_WEBHOOK_SECRET=your_paypal_webhook_secret
GOOGLEPAY_WEBHOOK_SECRET=your_googlepay_webhook_secret
WISE_WEBHOOK_SECRET=your_wise_webhook_secret
SQUARE_WEBHOOK_SECRET=your_square_webhook_secret
VENMO_WEBHOOK_SECRET=your_venmo_webhook_secret
RAPYD_WEBHOOK_SECRET=your_rapyd_webhook_secret

# Server Configuration
PORT=3001
NODE_ENV=development
